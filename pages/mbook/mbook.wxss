/**mbook.wxss**/
@import "/svgs.wxss";

.content {
  padding: 0 5px;
}

.mbook {
  overflow: hidden;
}

.content .add {
  height: 30px;
  line-height: 30px;
}

.timebox {
  position: absolute;
  left: 30rpx;
  top: 30rpx;
}

.timebox .yearmonth {
  font-size: 30rpx;
  padding: 0 8rpx;
  background-color: #f7dd55;
  border-radius: 6rpx;
  color: #fff;
  border: 1px solid #555;
}

.setbox {
  position: absolute;
  right: 30rpx;
  top: 20rpx;
}

.setbox image, .timebox image {
  width: 60rpx;
  height: 60rpx;
}

.toolbox {
  clear: both;
  background-color: #fff;
  height: 50rpx;
  line-height: 50rpx;
  display: block;
}

.toolbox-item {
  float: left;
}

.toolbox-item:nth-child(1) {
  width: 40%;
  font-size: 16px;
}

.toolbox-item:nth-child(2) {
  width: 60%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 14px;
}

.showbox {
  /* height: 150px; *//* background: url('https://tooapi.tooao.cn/images/2.jpg') no-repeat;
  background-size: 100% 100%; */
  background-color: #f7dd55;
  color: #fff;
  clear: both;
  width: 100%;
  z-index: 100;
  /* background-color: rgba(255,255,255,.5); */
}

.showbox-top {
  text-align: center;
}

.s-t-money {
  font-size: 2rem;
  font-family: 'KaiTi';
  padding: 30rpx 0 10rpx;
}

.s-t-money-box image {
  width: 60rpx;
  height: 60rpx;
}

.s-t-tag {
  font-size: 0.8rem;
  margin-top: 10rpx;
}

.s-t-tag-box {
  border-radius: 50rpx;
  padding: 5rpx 20rpx;
}

.s-t-tag-box image {
  width: 25rpx;
  height: 25rpx;
}

.showbox-down {
  margin-top: 35rpx;
}

.s-d-item {
  width: 50%;
  float: left;
  text-align: center;
}

.s-d-item-top {
  font-family: 'KaiTi';
  font-size: 1.2rem;
}

.s-d-item-down {
  font-size: 0.8rem;
}

.mbox {
  min-height: 200px;
  clear: both;
}

.mbox-item {
  clear: both;
}

.m-t-title {
  background-color: #f8fafc;
  height: 30px;
  line-height: 30px;
  font-size: 14px;
  color: #959595;
}

.m-t-t-left {
  float: left;
  margin-left: 10px;
}

.m-t-t-right {
  float: right;
  margin-right: 10px;
}

.m-list {
  height: 120rpx;
  line-height: 120rpx;
  clear: both;
  vertical-align: middle;
}

/* .m-list:hover {
  background-color: #f0f0f0;
} */

.m-l-left {
  float: left;
  /* padding: 8px 10px 0; */
  width: 17%;
  /* text-align: center; */
}

.m-l-timg {
  background-color: #f6c142;
  margin: 8px 10px 0;
}

.m-l-right {
  width: 83%;
  float: left;
  /* margin-right: 10px; *//* background-color: #f0f0f0;  */
  border-bottom: 0.5px solid #ededed;
}

.mbox-item .m-list:last-child .m-l-right {
  border-bottom: 0px;
}

.m-l-tagname {
  float: left;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 400rpx;
  color: #959595;
}

.m-l-tagremark {
  color: #959595;
  font-size: 13px;
}

.m-l-money {
  float: right;
  padding-right: 10px;
  font-weight: 500;
  font-size: 20px;
  width: 200rpx;
  text-align: right;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.addwater {
  position: fixed;
  text-align: center;
  bottom: 0px;
  width: 100%;
}

.addwater .addimg {
  width: 50px;
  height: 50px;
}

.reloadbox {
  width: 100%;
  height: 400rpx;
  text-align: center;
}

.reloadbox .topbox {
  margin-top: 100rpx;
}

.reloadbox .topbox image {
  width: 80rpx;
  height: 80rpx;
}

.reloadbox .downbox {
  font-size: 25rpx;
}

.xxjtbox {
  width: 100%;
  height: 400rpx;
  text-align: center;
}

.xxjtbox .topbox {
  margin-top: 200rpx;
}

.xxjtbox .topbox image {
 width: 300rpx;
 height: 280rpx;
}
