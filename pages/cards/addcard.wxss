/* pages/cards/addcard.wxss */

.cardbox {
  padding: 10px;
}

.cardbox-item {
  text-align: center;
  margin-bottom: 10px;
}

.cardbox-img {
  width: 80px;
  height: 80px;
}

.t-item {
  height: 35px;
  line-height: 35px;
  border-bottom: 1rpx solid #d9d9d9;
  margin-top: 15px;
  color: #444;
}

.t-item-left {
  float: left;
  width: 30%;
}

.t-item-right {
  float: right;
  width: 70%;
}

.t-item-right input {
  text-align: right;
}

.savecradbox {
  margin-top: 20px;
}


.btnbox {
  clear: both;
  margin-top: 20px;
}

.btnitem1 {
  width: 50%;
  text-align: center;
  float: left;
}

.btnitem2 {
  width: 50%;
  text-align: center;
  float: left;
}

.btnsive {
  border-radius: 4px;
  width: 150px;
  margin: 0 auto;
}

.btnitem1 .btnsive {
  /* border: 1px solid #f6c142; */
  background-color: #fff;
  color: #f6c142;
  height: 40px;
  line-height: 40px;
}

.btnitem1 .btnsive-hover {
  background-color: #f0f0f0;
}

.btnitem1 .btnsive::after {
  border: 1px solid #f6c142;
}

.btnitem2 .btnsive {
  background-color: #f6c142;
  color: #fff;
  height: 42px;
  line-height: 42px;
}

.btnitem2 .btnsive-hover {
  background-color: #f4d95b;
}

.btnitem2 .btnsive::after {
  border: none;
}