.carditem {
  width: 100%;
  height: 240rpx;
  border-radius: 5px;
  margin: 20rpx 0;
}

.carditem:nth-child(5n+1) {
  background-color: rgba(0, 150, 136, 0.8);
}

.carditem:nth-child(5n+2) {
  background-color: rgba(95, 184, 120, 0.8);
}

.carditem:nth-child(5n+3) {
  background-color: rgba(30, 159, 255, 0.8);
}

.carditem:nth-child(5n+4) {
  background-color: rgba(255, 184, 0, 0.8);
}

.carditem:nth-child(5n+5) {
  background-color: rgba(255, 87, 34, 0.8);
}

.carditem .top {
  height: 100rpx;
  padding: 20rpx 20rpx 0;
}

.carditem .top .t-left {
  float: left;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #fff;
  border-radius: 50px;
  color: #444;
  font-size: 20px;
}

.carditem .top .t-right {
  float: left;
  font-size: 12px;
  color: #fff;
  margin-left: 20rpx;
  width: 85%;
}

.c-name {
  font-size: 16px;
  margin-bottom: 8rpx;
  width: 100%;
  height: 10px;
  clear: both;
}

.c-name-1 {
  float: left;
}

.c-name-2 {
  float: right;
}

.c-name-zjxf {
  font-size: 12px;
}

.t-r-item {
  margin-right: 10rpx;
}

.t-r-i-z {
  color: #fff;
  font-size: 13px;
}

.carditem .center {
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 10px;
  font-size: 0.8rem;
  color: #fff;
}

.carditem .down {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 14px;
  background-color: rgba(0, 0, 0, 0.2);
  border-bottom-left-radius: 5px;
  border-bottom-right-radius: 5px;
}

.d-item {
  float: left;
  width: 33%;
  text-align: center;
  color: #fff;
}

.c-xyk-tag {
  border: 0.5px solid #f4d95b;
  border-radius: 3px;
  padding: 0 6rpx;
  font-size: 12px;
  color: #f4d95b;
  background-color: #fff;
}
