/**index.wxss**/
@import "/svgs.wxss";

.user-login{
  background: url('https://tooapi.tooao.cn/images/p6.png') no-repeat;
  background-size: 100% auto;
}

.user-style {
  /* background: url('https://tooapi.tooao.cn/images/p1.png') no-repeat;
  background-size: 100% 100%; */
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  /* justify-content: space-between; */
  box-sizing: border-box;
  height: 100%;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f0f0f0;
}

.loginbox {
  position: absolute;
  align-items: center;
  bottom: 130rpx;
}

.loginbox-item {
  text-align: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
  font-size: 14px;
  background-color: #fff;
}

.userinfo-nickname::after {
  border: 0px;
}

.user-menu {
  padding: 40rpx 0 20rpx;
  height: 100rpx;
}

.user-menu-item {
  float: left;
  width: 33%;
  text-align: center;
  color: #444;
}

.user-menu-item-top {
}

.user-menu-item-down {
  font-size: 12px;
}

.user {
  width: 100%;
  height: 128rpx;
  line-height: 128rpx;
  display: flex;
}

.user-left {
  text-align: center;
  margin-top: 30rpx;
}

.user-left-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.user-right {
  font-size: 14px;
}

.user-list {
  height: 100rpx;
  line-height: 100rpx;
  clear: both;
  vertical-align: middle;
}

.user-l-left {
  float: left;
  /* padding: 8px 10px 0; */
  width: 15%;
  /* text-align: center; */
}

.iconfont-box {
  width: 80rpx;
  height: 80rpx;
  background-color: #fff;
}

.iconfont {
  font-size: 45rpx;
}

.user-l-timg {
  /* background-color: #f6c142; */
  color: #f6c142;
  margin: 8rpx 20rpx 0;
}

.user-l-right {
  width: 85%;
  float: left;
  /* margin-right: 10px; *//* background-color: #f0f0f0; */
  border-bottom: 0.5rpx solid #ededed;
}

.user-item .user-list:last-child .user-l-right {
  border-bottom: 0px;
}

.user-l-tagname {
  float: left;
}

.user-l-money {
  float: right;
  padding-right: 10px;
  font-weight: 500;
  font-size: 20px;
}
