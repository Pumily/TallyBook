<!--pages/mbook/chart.wxml-->
<view class="page">
<view class="page__bd">
      <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_select">
                <view class="weui-cell__bd">
                    <picker bindchange="bindAccountChange" value="{{accountIndex}}" range="{{accounts}}">
                        <view class="weui-select">{{accounts[accountIndex]}}</view>
                    </picker>
                </view>
            </view>
      </view>
      <view class="weui-article">
            <view class="weui-article__section">
                <view class="weui-article__title arti_chart">总支出：<text class=" article_chart"> ￥ 12121.00</text></view>
                <view class="weui-article__section">
                    <view class="weui-article__h3 arti_chart">日均：<text class=" article_chart">￥ 200.00</text></view>
                    <view class="weui-article__p">
                        <image class="weui-article__img" src="../../imges/b1.jpg" mode="aspectFit" style="height: 150px" />
                      
                    </view>
                </view>
                <view class="weui-article__section">
                    <view class="weui-article__h3 art_chart">支出占比</view>
                     <image class="weui-article__img" src="../../imges/b2.jpg" mode="aspectFit" style="height: 150px" />
                </view>
            </view>
        </view>
  </view>
  
</view>